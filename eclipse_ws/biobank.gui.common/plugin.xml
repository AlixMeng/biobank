<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="edu.ualberta.med.biobank.gui.common.BgcSessionState">
         <variable
               name="edu.ualberta.med.biobank.gui.common.sourceprovider.loginState"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="edu.ualberta.med.biobank.gui.common.loggedIn">
         <with
               variable="edu.ualberta.med.biobank.gui.common.sourceprovider.loginState">
            <equals
                  value="loggedIn">
            </equals>
         </with>
      </definition>
      <definition
            id="edu.ualberta.med.biobank.gui.common.loggedOut">
         <with
               variable="edu.ualberta.med.biobank.gui.common.sourceprovider.loginState">
            <equals
                  value="loggedOut">
            </equals>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
        <handler
            class="edu.ualberta.med.biobank.gui.common.handlers.BgcCancelHandler"
            commandId="edu.ualberta.med.biobank.gui.common.commands.cancel">
     <activeWhen>
        <with
              variable="activeEditor">
           <instanceof
                 value="edu.ualberta.med.biobank.gui.common.forms.BgcEntryForm">
           </instanceof>
        </with>
     </activeWhen>
      </handler> 
      <handler
            class="edu.ualberta.med.biobank.gui.common.handlers.BgcReloadHandler"
            commandId="edu.ualberta.med.biobank.gui.common.commands.reset">
         <activeWhen>
            <with
                  variable="activeEditor">
               <instanceof
                     value="edu.ualberta.med.biobank.gui.common.forms.BgcEntryForm">
               </instanceof>
            </with>
         </activeWhen>
      </handler>         
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.edit"
            id="edu.ualberta.med.biobank.gui.common.commands.confirm"
            name="%confirm.command.name">
      </command>
      <command
            categoryId="org.eclipse.ui.category.edit"
            id="edu.ualberta.med.biobank.gui.common.commands.cancel"
            name="%cancel.command.name">
      </command>
      <command
            categoryId="org.eclipse.ui.category.edit"
            id="edu.ualberta.med.biobank.gui.common.commands.reset"
            name="%reset.command.name">
      </command>
   </extension>
</plugin>
