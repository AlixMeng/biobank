<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="edu.ualberta.med.biobank.model" auto-import="false" default-cascade="none">
	<class name="Center" table="CENTER" lazy="true" polymorphism="explicit" abstract="true" >
		<cache usage="read-write" />
		<id name="id" type="integer" column="ID">
			<generator class="increment"/>			
		</id>
		<discriminator column="DISCRIMINATOR" type="string"/>
          <version name="version" column="VERSION" access="field" />
		<!-- Attributes mapping for the Center class -->
		<property name="name" type="string" length="255" column="NAME" unique="true" not-null="true"/>
		<property name="nameShort" type="string" length="50" column="NAME_SHORT" unique="true" not-null="true"/>
		<!-- Associations mapping for the Center class -->
		<many-to-one name="address" class="edu.ualberta.med.biobank.model.Address" column="ADDRESS_ID" unique="true" lazy="proxy" not-null="true" cascade="all"/>
		<set name="processingEventCollection" lazy="true" cascade="none" inverse="true">
			<cache usage="read-write" />
			<key column="CENTER_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.ProcessingEvent"/>
		</set>
		<set name="membershipCollection" lazy="true" cascade="none" inverse="false">
			<cache usage="read-write" />
			<key column="CENTER_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.Membership"/>
		</set>
		<set name="srcDispatchCollection" lazy="true" cascade="none" inverse="true">
			<cache usage="read-write" />
			<key column="SENDER_CENTER_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.Dispatch"/>
		</set>
		<set name="dstDispatchCollection" lazy="true" cascade="none" inverse="true">
			<cache usage="read-write" />
			<key column="RECEIVER_CENTER_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.Dispatch"/>
		</set>
		<set name="originInfoCollection" lazy="true" cascade="all" inverse="false">
			<cache usage="read-write" />
			<key column="CENTER_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.OriginInfo"/>
		</set>
			<many-to-one name="activityStatus" class="edu.ualberta.med.biobank.model.ActivityStatus" column="ACTIVITY_STATUS_ID" lazy="proxy" not-null="true" cascade="none"/>
		<set name="commentCollection" table="CENTER_COMMENT" lazy="true" cascade="delete" inverse="false">
			<cache usage="read-write" />
			<key column="CENTER_ID" />
			<many-to-many class="edu.ualberta.med.biobank.model.Comment" column="COMMENT_ID" unique="true"/>
		</set>
		<subclass name="edu.ualberta.med.biobank.model.Site" discriminator-value="Site">
			<!-- Associations mapping for the Site class -->
			<set name="studyCollection" table="SITE_STUDY" lazy="true" inverse="false">
				<cache usage="read-write" />
				<key column="SITE_ID" />
				<many-to-many class="edu.ualberta.med.biobank.model.Study" column="STUDY_ID" />
			</set>
			<set name="containerTypeCollection" lazy="true" cascade="all" inverse="true">
				<cache usage="read-write" />
				<key column="SITE_ID" not-null="false" />
				<one-to-many class="edu.ualberta.med.biobank.model.ContainerType"/>
			</set>
			<set name="containerCollection" lazy="true" cascade="all" inverse="true">
				<cache usage="read-write" />
				<key column="SITE_ID" not-null="false" />
				<one-to-many class="edu.ualberta.med.biobank.model.Container"/>
			</set>
		</subclass>
		<subclass name="edu.ualberta.med.biobank.model.ResearchGroup" discriminator-value="ResearchGroup">
			<!-- Associations mapping for the ResearchGroup class -->
			<many-to-one name="study" class="edu.ualberta.med.biobank.model.Study" column="STUDY_ID" unique="true" lazy="proxy" not-null="false" cascade="none"/>
			<set name="requestCollection" lazy="true" cascade="none" inverse="false">
				<cache usage="read-write" />
				<key column="RESEARCH_GROUP_ID" not-null="false" />
				<one-to-many class="edu.ualberta.med.biobank.model.Request"/>
			</set>
		</subclass>
		<subclass name="edu.ualberta.med.biobank.model.Clinic" discriminator-value="Clinic">
			<!-- Attributes mapping for the Clinic class -->
			<property name="sendsShipments" type="boolean" column="SENDS_SHIPMENTS"/>
			<!-- Associations mapping for the Clinic class -->
			<set name="contactCollection" lazy="true" cascade="all" inverse="true">
				<cache usage="read-write" />
				<key column="CLINIC_ID" not-null="false" />
				<one-to-many class="edu.ualberta.med.biobank.model.Contact"/>
			</set>
		</subclass>
	</class>
</hibernate-mapping>
