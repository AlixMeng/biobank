<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="edu.ualberta.med.biobank.model" auto-import="false" default-cascade="none">
	<class name="Patient" table="PATIENT" lazy="true" polymorphism="explicit" abstract="false" >
		<cache usage="read-write" />
		<id name="id" type="integer" column="ID">
			<generator class="increment"/>			
		</id>
          <version name="version" column="VERSION" access="field" />
		<!-- Attributes mapping for the Patient class -->
		<property name="pnumber" type="string" length="100" column="PNUMBER" unique="true" not-null="true"/>
		<property name="createdAt" type="java.util.Date" column="CREATED_AT"/>
		<!-- Associations mapping for the Patient class -->
		<set name="collectionEventCollection" lazy="true" cascade="none" inverse="true">
			<cache usage="read-write" />
			<key column="PATIENT_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.CollectionEvent"/>
		</set>
			<many-to-one name="study" class="edu.ualberta.med.biobank.model.Study" column="STUDY_ID" lazy="proxy" not-null="true" cascade="none"/>
		<set name="commentCollection" table="PATIENT_COMMENT" lazy="true" cascade="delete" inverse="false">
			<cache usage="read-write" />
			<key column="PATIENT_ID" />
			<many-to-many class="edu.ualberta.med.biobank.model.Comment" column="COMMENT_ID" unique="true"/>
		</set>
	</class>
</hibernate-mapping>
