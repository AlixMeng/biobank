<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="edu.ualberta.med.biobank.model" auto-import="false" default-cascade="none">
	<class name="ProcessingEvent" table="PROCESSING_EVENT" lazy="true" polymorphism="explicit" abstract="false" >
		<cache usage="read-write" />
		<id name="id" type="integer" column="ID">
			<generator class="increment"/>			
		</id>
          <version name="version" column="VERSION" access="field" />
		<!-- Attributes mapping for the ProcessingEvent class -->
		<property name="worksheet" type="string" length="100" column="WORKSHEET"/>
		<property name="createdAt" type="java.util.Date" column="CREATED_AT" not-null="true"/>
		<!-- Associations mapping for the ProcessingEvent class -->
			<many-to-one name="center" class="edu.ualberta.med.biobank.model.Center" column="CENTER_ID" lazy="proxy" not-null="true" cascade="none"/>
		<set name="specimenCollection" lazy="true" cascade="save-update" inverse="true">
			<cache usage="read-write" />
			<key column="PROCESSING_EVENT_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.Specimen"/>
		</set>
			<many-to-one name="activityStatus" class="edu.ualberta.med.biobank.model.ActivityStatus" column="ACTIVITY_STATUS_ID" lazy="proxy" not-null="true" cascade="none"/>
		<set name="commentCollection" table="PROCESSING_EVENT_COMMENT" lazy="true" cascade="delete" inverse="false">
			<cache usage="read-write" />
			<key column="PROCESSING_EVENT_ID" />
			<many-to-many class="edu.ualberta.med.biobank.model.Comment" column="COMMENT_ID" unique="true"/>
		</set>
	</class>
</hibernate-mapping>
