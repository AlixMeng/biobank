<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="edu.ualberta.med.biobank.model" auto-import="false" default-cascade="none">
	<class name="Study" table="STUDY" lazy="true" polymorphism="explicit" abstract="false" >
		<cache usage="read-write" />
		<id name="id" type="integer" column="ID">
			<generator class="increment"/>			
		</id>
          <version name="version" column="VERSION" access="field" />
		<!-- Attributes mapping for the Study class -->
		<property name="name" type="string" length="255" column="NAME" unique="true" not-null="true"/>
		<property name="nameShort" type="string" length="50" column="NAME_SHORT" unique="true" not-null="true"/>
		<!-- Associations mapping for the Study class -->
		<set name="aliquotedSpecimenCollection" lazy="true" cascade="delete,save-update" inverse="true">
			<cache usage="read-write" />
			<key column="STUDY_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.AliquotedSpecimen"/>
		</set>
		<set name="patientCollection" lazy="true" cascade="save-update" inverse="true">
			<cache usage="read-write" />
			<key column="STUDY_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.Patient"/>
		</set>
		<set name="siteCollection" table="SITE_STUDY" lazy="true" inverse="true">
			<cache usage="read-write" />
			<key column="STUDY_ID" />
			<many-to-many class="edu.ualberta.med.biobank.model.Site" column="SITE_ID" />
		</set>
		<set name="commentCollection" table="STUDY_COMMENT" lazy="true" cascade="delete" inverse="false">
			<cache usage="read-write" />
			<key column="STUDY_ID" />
			<many-to-many class="edu.ualberta.med.biobank.model.Comment" column="COMMENT_ID" unique="true"/>
		</set>
			<many-to-one name="activityStatus" class="edu.ualberta.med.biobank.model.ActivityStatus" column="ACTIVITY_STATUS_ID" lazy="proxy" not-null="true" cascade="none"/>
		<set name="membershipCollection" lazy="true" cascade="none" inverse="false">
			<cache usage="read-write" />
			<key column="STUDY_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.Membership"/>
		</set>
		<set name="studyEventAttrCollection" lazy="true" cascade="delete,save-update" inverse="true">
			<cache usage="read-write" />
			<key column="STUDY_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.StudyEventAttr"/>
		</set>
		<set name="contactCollection" table="STUDY_CONTACT" lazy="true" inverse="false">
			<cache usage="read-write" />
			<key column="STUDY_ID" />
			<many-to-many class="edu.ualberta.med.biobank.model.Contact" column="CONTACT_ID" />
		</set>
		<one-to-one name="researchGroup" class="edu.ualberta.med.biobank.model.ResearchGroup" property-ref="study" lazy="proxy" cascade="none"/>
		<set name="sourceSpecimenCollection" lazy="true" cascade="delete,save-update" inverse="true">
			<cache usage="read-write" />
			<key column="STUDY_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.SourceSpecimen"/>
		</set>
	</class>
</hibernate-mapping>
