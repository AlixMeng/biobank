<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="edu.ualberta.med.biobank.model" auto-import="false" default-cascade="none">
	<class name="RequestSpecimen" table="REQUEST_SPECIMEN" lazy="true" polymorphism="explicit" abstract="false" discriminator-value="RequestAliquot">
		<cache usage="read-write" />
		<id name="id" type="integer" column="ID">
			<generator class="increment"/>			
		</id>
          <version name="version" column="VERSION" access="field" />
		<!-- Attributes mapping for the RequestSpecimen class -->
		<property name="state" type="integer" column="STATE"/>
		<property name="claimedBy" type="string" length="50" column="CLAIMED_BY"/>
		<!-- Associations mapping for the RequestSpecimen class -->
			<many-to-one name="specimen" class="edu.ualberta.med.biobank.model.Specimen" column="SPECIMEN_ID" lazy="proxy" not-null="true" cascade="none"/>
			<many-to-one name="request" class="edu.ualberta.med.biobank.model.Request" column="REQUEST_ID" lazy="proxy" not-null="true" cascade="none"/>
	</class>
</hibernate-mapping>
