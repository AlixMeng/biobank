<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="edu.ualberta.med.biobank.model" auto-import="false" default-cascade="none">
	<class name="Container" table="CONTAINER" lazy="true" polymorphism="explicit" abstract="false" >
		<cache usage="read-write" />
		<id name="id" type="integer" column="ID">
			<generator class="increment"/>			
		</id>
          <version name="version" column="VERSION" access="field" />
		<!-- Attributes mapping for the Container class -->
		<property name="productBarcode" type="string" length="255" column="PRODUCT_BARCODE"/>
		<property name="label" type="string" length="255" column="LABEL" not-null="true"/>
		<property name="temperature" type="double" column="TEMPERATURE"/>
		<property name="path" type="string" length="255" column="PATH"/>
		<!-- Associations mapping for the Container class -->
		<set name="commentCollection" table="CONTAINER_COMMENT" lazy="true" cascade="delete" inverse="false">
			<cache usage="read-write" />
			<key column="CONTAINER_ID" />
			<many-to-many class="edu.ualberta.med.biobank.model.Comment" column="COMMENT_ID" unique="true"/>
		</set>
		<set name="childPositionCollection" lazy="true" cascade="none" inverse="true">
			<cache usage="read-write" />
			<key column="PARENT_CONTAINER_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.ContainerPosition"/>
		</set>
			<many-to-one name="topContainer" class="edu.ualberta.med.biobank.model.Container" column="TOP_CONTAINER_ID" lazy="proxy" not-null="false" cascade="none"/>
		<set name="specimenPositionCollection" lazy="true" cascade="none" inverse="true">
			<cache usage="read-write" />
			<key column="CONTAINER_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.SpecimenPosition"/>
		</set>
			<many-to-one name="containerType" class="edu.ualberta.med.biobank.model.ContainerType" column="CONTAINER_TYPE_ID" lazy="proxy" not-null="true" cascade="none"/>
		<many-to-one name="position" class="edu.ualberta.med.biobank.model.ContainerPosition" column="POSITION_ID" unique="true" lazy="proxy" not-null="false" cascade="all"/>
			<many-to-one name="site" class="edu.ualberta.med.biobank.model.Site" column="SITE_ID" lazy="proxy" not-null="true" cascade="none"/>
			<many-to-one name="activityStatus" class="edu.ualberta.med.biobank.model.ActivityStatus" column="ACTIVITY_STATUS_ID" lazy="proxy" not-null="true" cascade="none"/>
	</class>
</hibernate-mapping>
