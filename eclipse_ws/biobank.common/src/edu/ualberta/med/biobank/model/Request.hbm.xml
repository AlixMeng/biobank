<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="edu.ualberta.med.biobank.model" auto-import="false" default-cascade="none">
	<class name="Request" table="REQUEST" lazy="true" polymorphism="explicit" abstract="false" >
		<cache usage="read-write" />
		<id name="id" type="integer" column="ID">
			<generator class="increment"/>			
		</id>
          <version name="version" column="VERSION" access="field" />
		<!-- Attributes mapping for the Request class -->
		<property name="submitted" type="java.util.Date" column="SUBMITTED"/>
		<property name="created" type="java.util.Date" column="CREATED"/>
		<!-- Associations mapping for the Request class -->
		<set name="dispatchCollection" lazy="true" cascade="none" inverse="false">
			<cache usage="read-write" />
			<key column="REQUEST_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.Dispatch"/>
		</set>
		<set name="requestSpecimenCollection" lazy="true" cascade="all" inverse="true">
			<cache usage="read-write" />
			<key column="REQUEST_ID" not-null="true" />
			<one-to-many class="edu.ualberta.med.biobank.model.RequestSpecimen"/>
		</set>
			<many-to-one name="address" class="edu.ualberta.med.biobank.model.Address" column="ADDRESS_ID" lazy="proxy" not-null="true" cascade="none"/>
			<many-to-one name="researchGroup" class="edu.ualberta.med.biobank.model.ResearchGroup" column="RESEARCH_GROUP_ID" lazy="proxy" not-null="true" cascade="none"/>
	</class>
</hibernate-mapping>
