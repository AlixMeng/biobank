<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="edu.ualberta.med.biobank.model" auto-import="false" default-cascade="none">
	<class name="Dispatch" table="DISPATCH" lazy="true" polymorphism="explicit" abstract="false" discriminator-value="DispatchShipment">
		<cache usage="read-write" />
		<id name="id" type="integer" column="ID">
			<generator class="increment"/>			
		</id>
          <version name="version" column="VERSION" access="field" />
		<!-- Attributes mapping for the Dispatch class -->
		<property name="state" type="integer" column="STATE"/>
		<!-- Associations mapping for the Dispatch class -->
		<set name="dispatchSpecimenCollection" lazy="true" cascade="all" inverse="true">
			<cache usage="read-write" />
			<key column="DISPATCH_ID" not-null="false" />
			<one-to-many class="edu.ualberta.med.biobank.model.DispatchSpecimen"/>
		</set>
			<many-to-one name="senderCenter" class="edu.ualberta.med.biobank.model.Center" column="SENDER_CENTER_ID" lazy="proxy" not-null="true" cascade="none"/>
		<many-to-one name="shipmentInfo" class="edu.ualberta.med.biobank.model.ShipmentInfo" column="SHIPMENT_INFO_ID" unique="true" lazy="proxy" not-null="false" cascade="all"/>
			<many-to-one name="receiverCenter" class="edu.ualberta.med.biobank.model.Center" column="RECEIVER_CENTER_ID" lazy="proxy" not-null="true" cascade="none"/>
		<set name="commentCollection" table="DISPATCH_COMMENT" lazy="true" cascade="delete" inverse="false">
			<cache usage="read-write" />
			<key column="DISPATCH_ID" />
			<many-to-many class="edu.ualberta.med.biobank.model.Comment" column="COMMENT_ID" unique="true"/>
		</set>
	</class>
</hibernate-mapping>
