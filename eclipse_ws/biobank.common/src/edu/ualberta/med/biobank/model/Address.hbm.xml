<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="edu.ualberta.med.biobank.model" auto-import="false" default-cascade="none">
	<class name="Address" table="ADDRESS" lazy="true" polymorphism="explicit" abstract="false" >
		<cache usage="read-write" />
		<id name="id" type="integer" column="ID">
			<generator class="increment"/>			
		</id>
          <version name="version" column="VERSION" access="field" />
		<!-- Attributes mapping for the Address class -->
		<property name="street1" type="string" length="255" column="STREET1"/>
		<property name="street2" type="string" length="255" column="STREET2"/>
		<property name="city" type="string" length="50" column="CITY"/>
		<property name="province" type="string" length="50" column="PROVINCE"/>
		<property name="postalCode" type="string" length="50" column="POSTAL_CODE"/>
		<property name="emailAddress" type="string" length="100" column="EMAIL_ADDRESS"/>
		<property name="phoneNumber" type="string" length="50" column="PHONE_NUMBER"/>
		<property name="faxNumber" type="string" length="50" column="FAX_NUMBER"/>
		<property name="country" type="string" length="50" column="COUNTRY"/>
		<!-- Associations mapping for the Address class -->
	</class>
</hibernate-mapping>
