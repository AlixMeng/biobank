<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="edu.ualberta.med.biobank.model" auto-import="false" default-cascade="none">
	<class name="AbstractPosition" table="ABSTRACT_POSITION" lazy="true" polymorphism="explicit" abstract="true" >
		<cache usage="read-write" />
		<id name="id" type="integer" column="ID">
			<generator class="increment"/>			
		</id>
		<discriminator column="DISCRIMINATOR" type="string"/>
          <version name="version" column="VERSION" access="field" />
		<!-- Attributes mapping for the AbstractPosition class -->
		<property name="row" type="integer" column="ROW" not-null="true"/>
		<property name="col" type="integer" column="COL" not-null="true"/>
		<property name="positionString" type="string" length="50" column="POSITION_STRING"/>
		<subclass name="edu.ualberta.med.biobank.model.ContainerPosition" discriminator-value="ContainerPosition">
			<!-- Associations mapping for the ContainerPosition class -->
				<many-to-one name="parentContainer" class="edu.ualberta.med.biobank.model.Container" column="PARENT_CONTAINER_ID" lazy="proxy" not-null="false" cascade="none"/>
			<one-to-one name="container" class="edu.ualberta.med.biobank.model.Container" property-ref="position" lazy="false" cascade="none"/>
		</subclass>
		<subclass name="edu.ualberta.med.biobank.model.SpecimenPosition" discriminator-value="SpecimenPosition">
			<!-- Associations mapping for the SpecimenPosition class -->
				<many-to-one name="container" class="edu.ualberta.med.biobank.model.Container" column="CONTAINER_ID" lazy="proxy" not-null="false" cascade="none"/>
			<many-to-one name="specimen" class="edu.ualberta.med.biobank.model.Specimen" column="SPECIMEN_ID" unique="true" lazy="false" not-null="false" cascade="none"/>
		</subclass>
	</class>
</hibernate-mapping>
