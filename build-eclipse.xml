      <classpath>
	<pathelement path="${eclipse.proj.dir.common}/bin" />
	<fileset dir="${eclipse.proj.dir.tools}/lib">
	  <include name="*.jar" />
	</fileset>
      </classpath>
    </javac>
  </target>

  <target name="eclipse-biobank-tests" depends="eclipse-biobank2">
