      <compilerclasspath>
	<pathelement location="jars/ecj-3.7.2.jar"/>
      </compilerclasspath>
      <compilerarg line="${build.compiler.arg}"/>
      <classpath refid="eclipse-jars" />
      <classpath refid="biobank-common-client-jars" />
